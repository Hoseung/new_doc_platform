{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "figure.meta.json@v1",
  "title": "Figure Metadata Schema v1",
  "description": "Schema for figure.meta.json@v1 sidecar files",
  "type": "object",
  "properties": {
    "caption": {
      "type": "string",
      "description": "Figure caption text"
    },
    "alt": {
      "type": "string",
      "description": "Alternative text for accessibility"
    },
    "notes": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Additional notes about the figure"
    },
    "meta": {
      "type": "object",
      "description": "Freeform machine metadata (non-semantic)"
    }
  },
  "additionalProperties": true
}
