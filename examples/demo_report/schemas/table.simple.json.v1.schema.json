{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "table.simple.json@v1",
  "title": "Simple Table Payload Schema v1",
  "description": "Schema for table.simple.json@v1 payloads representing tabular data",
  "type": "object",
  "required": ["columns", "rows"],
  "properties": {
    "columns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["key"],
        "properties": {
          "key": {
            "type": "string",
            "minLength": 1,
            "description": "Column identifier used in row objects"
          },
          "label": {
            "type": "string",
            "description": "Human-readable column header"
          },
          "unit": {
            "type": "string",
            "description": "Unit of measurement for the column"
          },
          "dtype": {
            "type": "string",
            "enum": ["string", "int", "float", "bool"],
            "description": "Data type hint for the column"
          }
        },
        "additionalProperties": false
      },
      "description": "Column definitions"
    },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": {
          "oneOf": [
            {"type": "string"},
            {"type": "number"},
            {"type": "boolean"},
            {"type": "null"}
          ]
        }
      },
      "description": "Row data (each row is an object with column keys)"
    },
    "caption": {
      "type": "string",
      "description": "Table caption"
    },
    "notes": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Additional notes about the table"
    },
    "meta": {
      "type": "object",
      "description": "Freeform machine metadata (non-semantic)"
    }
  },
  "additionalProperties": false
}
